@model Web.Models.User.Login

@{
    ViewData["Title"] = @SharedLocalizer.GetLocalizedHtmlString("Index");
    var returnUrl = @Context.Request.Query["returnurl"];
}


<h4>@SharedLocalizer.GetLocalizedHtmlString("Login")</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Index" asp-route-returnurl="@returnUrl">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label">@SharedLocalizer.GetLocalizedHtmlString("Email")</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label">@SharedLocalizer.GetLocalizedHtmlString("Password")</label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="RememberMe" />
                    @SharedLocalizer.GetLocalizedHtmlString("RememberMe")

                </label>
            </div>
            <div class="form-group">
                <input type="submit" value=@SharedLocalizer.GetLocalizedHtmlString("Create") class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Register">@SharedLocalizer.GetLocalizedHtmlString("Register")</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
