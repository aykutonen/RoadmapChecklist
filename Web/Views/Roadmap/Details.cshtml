@model Web.Models.Roadmap.Detail

@{
    ViewData["Title"] = @SharedLocalizer.GetLocalizedHtmlString("Details");
}

<h1>@SharedLocalizer.GetLocalizedHtmlString("Details")</h1>

<div>
    <h4>@SharedLocalizer.GetLocalizedHtmlString("Roadmap")</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @SharedLocalizer.GetLocalizedHtmlString("Name")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @SharedLocalizer.GetLocalizedHtmlString("Visibility")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Visibility)
        </dd>
        <dt class="col-sm-2">
            @SharedLocalizer.GetLocalizedHtmlString("StartDate")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StartDate)
        </dd>
        <dt class="col-sm-2">
            @SharedLocalizer.GetLocalizedHtmlString("EndDate")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EndDate)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">@SharedLocalizer.GetLocalizedHtmlString("Edit")</a> |
    <a asp-action="Index">@SharedLocalizer.GetLocalizedHtmlString("Back to list")</a>
</div>

@Html.ActionLink("Item Ekle", "Create", "RoadmapItem", new { RoadmapId = Model.Id })
@if (Model.Items != null && Model.Items.Count > 0)
{
    <table class="table table-striped table-hover table-borderless">
        <caption>Toplam @Model.Items.Count(x => !x.ParentId.HasValue) Kayıt</caption>
        <thead>
            <tr>
                <th scope="col">Order</th>
                <th scope="col">Title</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items.Where(x => !x.ParentId.HasValue))
            {
                var childCount = Model.Items.Count(x => x.ParentId == item.Id);


                <tr>
                    <td>@item.Order</td>
                    <td>@item.Title</td>
                    <td style="text-align:right;">
                        @Html.ActionLink("Sil", "Delete", "RoadmapItem", new { RoadmapId = Model.Id, ItemId = item.Id })
                        |
                        @Html.ActionLink("Alt Kayıt Ekle", "Create", "RoadmapItem", new { RoadmapId = Model.Id, ParentId = item.Id })
                    </td>
                </tr>
                @if (childCount > 0)
                {
                    <tr>
                        <td colspan="4">
                            <table class="table table-sm">
                                <caption>Toplam @childCount Kayıt</caption>
                                <tbody>
                                    @foreach (var child in Model.Items.Where(x => x.ParentId == item.Id))
                                    {
                                        <tr>
                                            <td></td>
                                            <td>@child.Order</td>
                                            <td>@child.Title</td>
                                            <td style="text-align:right;">
                                                @Html.ActionLink("Sil", "Delete", "RoadmapItem", new { RoadmapId = Model.Id, ItemId = child.Id })
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </td>
                    </tr>
                }

            }
        </tbody>
    </table>
}


